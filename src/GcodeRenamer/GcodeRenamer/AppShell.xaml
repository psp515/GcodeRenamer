<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GcodeRenamer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GcodeRenamer"
    Shell.NavBarIsVisible="False"
    Shell.FlyoutBehavior="Locked">
    

    <FlyoutItem Title="Home">
        <ShellContent 
                      ContentTemplate="{DataTemplate local:HomeView}"
                      Route="HomeView" />
    </FlyoutItem>

    <FlyoutItem Title="Help">
        <ShellContent
                      ContentTemplate="{DataTemplate local:HelpView}"
                      Route="HelpView" />
    </FlyoutItem>

    <FlyoutItem Title="Settings" >
        <ShellContent 
                      ContentTemplate="{DataTemplate local:SettingsView}"
                      Route="SettingsView" />
    </FlyoutItem>
   
</Shell>
