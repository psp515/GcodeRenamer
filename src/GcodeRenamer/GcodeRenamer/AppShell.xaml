<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="GcodeRenamer.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:GcodeRenamer"
       Shell.NavBarIsVisible="False"
       Shell.FlyoutBehavior="Locked">

    <Shell.FlyoutHeader>
        <Grid>
            <Label Text="Icon"
                   HeightRequest="142"
                   VerticalOptions="Center"
                   WidthRequest="230"
                   HorizontalOptions="Center" />
        </Grid>
    </Shell.FlyoutHeader>

    <Shell.FlyoutFooter>
        <Grid>
            <Label Text="Footer"
                   HeightRequest="142"
                   VerticalOptions="Center"
                   WidthRequest="230"
                   HorizontalOptions="Center" />
        </Grid>
    </Shell.FlyoutFooter>

    <ShellContent Title="Home"
                  ContentTemplate="{DataTemplate local:HomeView}"
                  Route="HomeView" />

    <ShellContent Title="Help"
                  ContentTemplate="{DataTemplate local:HelpView}"
                  Route="HelpView" />


    <ShellContent Title="Settings"
                  ContentTemplate="{DataTemplate local:SettingsView}"
                  Route="SettingsView" />

</Shell>
